/*//邀请人弹出框*/

.zhezaos {
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}

.tanchuan {
  position: fixed;
  width: 80%;
  left: 10%;
  top: 30%;
  background-color: #fff;
  z-index: 99999;
  height: 380rpx;
  border-radius: 8px;
}

.inputbox {
  width: 85%;
  margin: 0 auto;
  margin-top: 140rpx;
  margin-bottom: 80rpx;
}

.tanchuan input {
  color: #999;
  padding: 16rpx 0;
  border-bottom: 1px solid #f6f6fa;
  width: 100%;
  font-size: 28rpx;
}

.appbtn {
  width: 80%;
  position: absolute;
  left: 10%;
  bottom: 20rpx;
}
.btnBox {
	width: 80%;
  position: absolute;
  left: 10%;
  bottom: 20rpx;
	display: flex;
	justify-content: space-between;
}
.qx, .cof {
	width: 35%;
  background: #999;
  border-radius: 18rpx;
  padding: 12rpx 0;
  text-align: center;
  color: #fff;
	font-size: 28rpx;
}
.cof {
  background: #F5AC9E;
}
.tuijianren {
  text-align: center;
}

.tuijianren image {
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto;
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.tuijianren view:nth-child(1) {
  color: #999;
  font-size: 24rpx;
  margin-top: 40rpx;
  margin-bottom: 26rpx;
}

.tuijianren view:nth-child(3) {
  color: #333;
  font-size: 28rpx;
  font-weight: 700;
}
.wxbtn{font-size: 28rpx;color: #fff;background-color:rgb(205,168,110);border-radius: 30px;text-align: center;padding: 24rpx 0;margin: 0 auto;box-shadow:0px 2px 8px #CFCFCF; }