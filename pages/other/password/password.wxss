/* pages/other/password/password.wxss */
@import "../../../common/iconfont.wxss";

page {
  background: #f5f5f5;
}

.content {
  display: flex;
  justify-content: center;
  align-items: center;
}

.iptbox {
  width: 80rpx;
  height: 70rpx;
  
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.iptbox + .iptbox {
  border-left: 1rpx solid #E69888;
}

.ipt {
  width: 0;
  height: 0;
}

.btn-area {
  width: 80%;
  background-color: orange;
  color: white;
}

.undeline {
  text-decoration: underline;
}

.toubus {
  text-align: center;
}

.toubus view:nth-child(1) {
  color: #333;
  font-size: 48rpx;
  margin-top: 120rpx;
}

.toubus view:nth-child(2) {
  font-size: 28rpx;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}

.itemword {
  display: flex;
}

.tishi {
  color: #999;
  text-align: center;
  font-size: 24rpx;
  justify-content: center;
  margin-top: 40rpx;
}

.tishi i {
  margin-right: 10rpx;
}

.passbtn {
  margin-top: 160rpx;
  width: 60%;
  padding: 20rpx 0;
  background-color: #f5ac9e;
}

.asd {
  background-color: #d8d8d8;
}

.tijiao {
  text-align: center;
}

.ap1 {
  font-size: 28rpx;
  padding: 30rpx 30rpx;
}

.ap2 {
  font-size: 60rpx;
  margin-top: 180rpx;
}
