/* pages/productbill/productbill.wxss */
@import "../../common/iconfont.wxss";
page{background-color: #F6F6FA;margin-bottom: 110rpx;}
.nav_container{position: fixed; top: 0; width: 100%; height: 88rpx; background-color: #fff; z-index: 99;box-shadow: 0 1px 10px #eee;-moz-box-shadow: 0 1px 10px #eee;}
.nav_container .slider_list:nth-child(1){border-right: 2rpx solid #FCFCFD;}
.slider_list{width: 50%; height: 88rpx; line-height: 88rpx; text-align: center;}
.line_red{position: absolute; top:96%; width:80rpx;height:8rpx;background:#FAA696;border-radius:4rpx;}
.selected{color: #FAA696;}
/* 商品列表 */
.box_container .list_container:nth-child(1){margin-top: 88rpx;}
.list_container{background-color: #fff; width: 100%; height: 328rpx; margin-bottom: 20rpx;}
.list_control{width: 100%; height: 88rpx;}
.list_btn_container>view{margin-left: 36rpx; padding: 20rpx;}

.default_address_container{color: transparent;}
.default_address_container>view{border-radius: 100px;width:44rpx;height:44rpx; line-height: 44rpx; box-sizing: border-box;}
.default_address_container {margin-right: 20rpx;}
.default_address_container image{border-radius: 100px; width:44rpx;height:44rpx;}
/* 清单列表 */
.top_billlist_container{width: 100%; height: 140rpx; border-bottom: 2rpx solid #F6F6FA; padding: 20rpx 0;}
.center_billlist_container{width: 100%; height: 204rpx; border-bottom: 2rpx solid #F6F6FA; padding: 20rpx 0;}
.bottom_billlist_container{width: 100%; height: 88rpx;}
.btn_toselect{display:inline-block; width: 160rpx; height: 56rpx; line-height: 56rpx; font-size: 24rpx; border-radius: 30rpx; border: 2rpx solid #F5AC9E;}
.btn_click{color: #fff; background-color: #F5AC9E;}
.bill_btn_add{position: fixed; bottom: 28rpx; width: 100%; height: 88rpx;}
.bill_btn_add>view{width: 656rpx; height: 100%; line-height: 88rpx;background-color: #F5AC9E; border-radius: 60rpx; text-align: center; color: #fff; font-size: 28rpx;box-shadow: 0 5px 10px #E7DDCC;-moz-box-shadow: 0 5px 10px #E7DDCC;}
/* 推荐到首页 */
.bill_btn_contianer{width: 200rpx; height: 56rpx; background:rgba(245, 172, 158, 0.2); color: #F5AC9E;border:1px solid rgba(245, 172, 158,1); border-radius: 36rpx; line-height: 56rpx; text-align: center; padding: 0!important;}

