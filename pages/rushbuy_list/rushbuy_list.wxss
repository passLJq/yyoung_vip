/* pages/rushbuy_list/rushbuy_list.wxss */
@import "../../Component/sharebox/sharebox.wxss";
page{
  background: #fff;
}
/* NAV */
.NAV_container{width: 100%; height: 170rpx; color: rgba(255,255,255,0.5);position: fixed; top:0;}
.box_container{display: inline-block; width: 150rpx; height: 120rpx;background-color:#CDA86E; box-shadow: 0 6rpx 0 #eee;}
.select_nav{color: #fff; background-color: #8F7856;}
.line_red{position: absolute; top:126rpx;width: 0;height: 0;border-left: 20rpx solid transparent;border-right: 20rpx solid transparent;border-top: 20rpx solid #8F7856;}
/* 列表 */
.list_container{background-color: #fff; padding: 32rpx; width: 100%; margin-top: 140rpx;}
.prolist_container{width: 100%; height:300rpx;border-radius:16rpx; box-shadow: 0 0 15px rgb(240, 239, 239); margin-bottom: 20rpx;}
.proImg_container{width: 300rpx; height: 300rpx; padding: 36rpx;}
.proImg_container>image{width: 100%; height: 100%;border-radius:16rpx;}
.content_container{padding: 36rpx 20rpx 20rpx 0; color: #231916;}
.addPro_container, .share_container{width:140rpx;height:48rpx;border-radius:26rpx;}
.addPro_container{border:1px solid rgba(205,168,110,1); margin-right: 12rpx; color: rgba(205,168,110,1);}
.share_container{background:rgba(205,168,110,1);}
.rushBuy_title{width:80rpx;height:28rpx;color: #fff; margin-right: 12rpx; background:linear-gradient(270deg,rgba(232,55,74,1) 0%,rgba(253,94,67,1) 100%);border-radius:16rpx;}

.navbox {
  display: flex;
  align-items: center;
  background: #faa696;
  color: #fff;
  font-size: 28rpx;
  overflow-x: auto;
  position: relative;
  padding-bottom: 12rpx; }
  .navbox .navboxli {
    position: relative;
    width: 33.3%;
    text-align: center;
    flex-shrink: 0;
    padding: 30rpx 0 19rpx 0;
    background: rgba(0, 0, 0, 0);
    z-index: 999; }
  .navbox .p2 {
    margin-bottom: 10rpx; }

.beijieban {
  position: absolute;
  background-color: #F36549;
  width: 33.3%;
  top: 0;
  bottom: 6px;
  z-index: 99;
  transition: left 0.5s;
  left: 0; }

.triangle-downbox {
  position: absolute;
  width: 100%;
  bottom: -6px; }

.triangle-down {
  width: 0;
  height: 0;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-top: 6px solid #F36549;
  margin: 0 auto; }

.baise {
  position: absolute;
  height: 6px;
  background: #fff;
  bottom: 0;
  z-index: 9; }

.newtimebuy{
  display: flex;
  align-items: center;
  margin: 30rpx
}
.new1{
  width: 250rpx;
  height: 250rpx;
  flex-shrink: 0;
  margin-right: 20rpx
}
.new2{
  font-size: 26rpx;
  color: #666464;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 20rpx;
  margin-bottom: 90rpx
}
.new3{
  color: #E69888;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.new4{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.new5{
  color: #B2B2B2;
  font-size: 26rpx;
}
.new6{
    display: flex;
  align-items: center;
  color: #fff;
  font-size: 26rpx;
  background-color: rgba(250,166,150,1);
  border-radius: 30px;
  padding: 8rpx 10rpx;
}
.new6 image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx
}