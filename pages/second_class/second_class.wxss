/* pages/second_class/second_class.wxss */
@import "../../Component/goTop/goTop.wxss";
/* 轮播和分类 */
swiper{height: 360rpx;}
swiper image{width: 100%;display: block;height: 360rpx}
.swibtn{position: absolute;z-index: 9999;bottom: 5%;left: 0;right: 0;margin: auto;display: flex;align-items: center;justify-content: center}
.swibtnli{width: 8px;height: 8px;background: rgb(227,224,219);border-radius: 50%;margin-right: 10px;flex-shrink: 0}
.swactive{background: #CDA86E;width: 20px;border-radius: 4px}
.swiper_box_container{position: relative}
.fenul{display: flex;align-items: center;flex-wrap: wrap ;margin-bottom: 20rpx;background: #fff;padding-bottom: 30rpx}
.fenli{width: 25%;box-sizing: border-box;text-align: center;padding-top: 30rpx}
.fenli image{width: 128rpx;height: 128rpx;margin: 0 auto}
.fenli text{color: #333;font-size: 24rpx;}
/* 底部商品NAV */
.prolist_nav{width: 100%; height: 70rpx;  background-color: #fff;}
/* .prolist_nav>view>text{padding-right: 10rpx;} */
.select_nav{color: #CDA86E;}
/* 商品列表 */
.list_container{padding: 32rpx 24rpx; background-color: #FDFDFD; box-sizing: border-box;flex-wrap: wrap;border-radius:8px;}
.list_container>view{width: 340rpx; height: 478rpx; margin-bottom: 20rpx; background-color: #fff; box-shadow: 0 0 10px #eee;}
.list_img_container{width: 100%; height: 340rpx;}
.list_img_container>image{width: 100%; height: 100%;border-radius:8px;}