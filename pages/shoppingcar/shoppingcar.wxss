/* pages/shoppingcar/shoppingcar.wxss */
@import "../../common/font-awesome.wxss";
page{background-color: #F6F6FA;padding-bottom: 110rpx;}
.list_container{height: 88rpx; line-height: 88rpx;background:rgba(205,168,110,0.2);}
.shoppic_title{margin-right: 20rpx;}
.shoppic_title>image{width: 64rpx; height: 64rpx;border-radius: 50%;}

/*列表  */
.shop_logo{margin-right: 24rpx;}
.shop_logo>image{width: 38rpx; height: 38rpx;}
.default_address_container{width: 62rpx; color: transparent;}
.default_address_container>view{border-radius: 100px;width:44rpx;height:44rpx; line-height: 44rpx; box-sizing: border-box;}
.default_address_container image{border-radius: 100px; width:44rpx;height:44rpx;}

.btn_add, .btn_jian{display:inline-block;font-size: 50rpx;color: #F5AC9E;}
.btn_add_jian_nomore{color: #DCDCDC;}
.buy_counts{width: 140rpx; text-align: center; font-size: 28rpx; color: #4A4A4A;}
.product_list{padding: 24rpx 0;}
.product_img_container{width: 148rpx; height: 148rpx; margin-right: 24rpx;}
.product_img_container>image{width: 148rpx; height: 148rpx;}
.container_other{height: 74rpx; line-height: 74rpx; text-align: right;}

/*底部  */
.footer_container{position: fixed; bottom: 112rpx; background-color: #fff;z-index: 9; width: 100%; height: 108rpx;box-shadow: 0 -1rpx 10px #ccc;-moz-box-shadow: 0 -1rpx 10px #ccc;}
.pay_btn{width: 240rpx; height: 70rpx; color: #fff; background-color: #F5AC9E; border-radius: 36rpx; line-height: 70rpx; text-align: center;box-shadow:0px 5px 10px #CFCFCF;}
/*删除  */
.btn_delete{width: 128rpx; height: 100%; position: absolute; right: -128rpx; top:0; background-color: #F5AC9E; text-align: center; color: #fff; font-size: 28rpx;}

.btn_hover{background-color: #f60; color: #fff!important;}

.disabled{background-color: #E9E9E9;}

.wancheng{position: absolute;right: 3%;top:0;color: #8B572A;font-size: 28rpx}